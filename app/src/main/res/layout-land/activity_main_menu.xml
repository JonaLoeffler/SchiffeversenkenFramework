<RelativeLayout android:id="@+id/mainmenu_relativelayout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
    >

    <Button
        android:id="@+id/mainmenu_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:text="Start"/>

    <Button
        android:id="@+id/device_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Device_List"/>

    <Button
        android:id="@+id/make_discoverable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/device_list"
        android:layout_centerHorizontal="true"
        android:text="Make Discoverable"/>

    <TextView
        android:id="@+id/mainmenu_connectionstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/not_connected"/>

    <ProgressBar
        android:id="@+id/mainmenu_progressbar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/mainmenu_tv_waitingforopponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mainmenu_progressbar"
        android:layout_toRightOf="@+id/mainmenu_progressbar"
        android:textSize="25dp"
        android:visibility="gone"/>

</RelativeLayout>